{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "tests",
    "src/mail/professional-imap-client.ts",
    "src/mail/imap-client.ts", 
    "src/mail/hybrid-client.ts",
    "src/index-hybrid.ts",
    "src/index-original.ts",
    "src/cache/**/*",
    "src/gmail/**/*",
    "src/mail/hybrid-email-client.ts",
    "src/mail/emlx-parser.ts"
  ]
}